{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>Mes commandes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Numéro de commande</th>
				<th>Adresse</th>
				<th>Date de commande</th>
				<th>Produits</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>

			{% for p in purchases %}
				<tr>
					<td>{{ p.id }}</td>
					<td>{{ p.adress }}
						<br>
						{{ p.postalCode }},
						{{ p.city }}</td>
					<td>{{ p.purchasedAT | date('d/m/Y H:i')}}</td>
					{# <td>{{ p.purchasedAT.format('d/m/Y H:i')}}</td> #}
					<td>
						<ul>
							{% for item in p.purchaseItems %}
								<li>{{ item.quantity }}x
									{{ item.productName }}
									({{ item.productPrice}}
									€)
								</li>
							{% endfor %}
						</ul>
					</td>
					<td>{{ p.total / 100 }}
						€</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
